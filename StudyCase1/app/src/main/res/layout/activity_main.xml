<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.co.namasa.studycase1.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:textAlignment="center"
        android:text="Makan Malam"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="dengan Miilea"/>

    <EditText
        android:id="@+id/foodEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nasi Uduk"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/porsiEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_margin="30dp"
        >

        <Button
            android:id="@+id/eatbusBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="placeEatbus"
            android:text="Eatbus"
            android:background="@color/colorAccent"/>
        <Button
            android:id="@+id/abnormalBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:onClick="placeAbnormal"
            android:text="Abnormal"/>
    </LinearLayout>


</LinearLayout>
